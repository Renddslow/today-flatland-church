{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "dist",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "es2022",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  },
  "paths": {
    "*": ["node_modules/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
